<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.gustavo.diabetes_mellitus.Dieta.Tela_Ver_Dietas">

    <TextView
        android:id="@+id/txtTipoDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo Dieta"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTipoDieta"
        android:id="@+id/txt1"
        android:layout_marginTop="7dp"
        android:text="Frutas:" />

    <TextView
        android:id="@+id/txtFrutas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:layout_below="@id/txt1"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFrutas"
        android:layout_marginTop="5dp"
        android:text="Carnes:" />

    <TextView
        android:id="@+id/txtCarnes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCarnes"
        android:layout_marginTop="5dp"
        android:text="Cereais e GrÃ£os:" />

    <TextView
        android:id="@+id/txtCereais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView15"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_below="@id/txtCereais"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Verduras e Legumes:" />

    <TextView
        android:id="@+id/txtVerduras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@id/textView17"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_below="@id/txtVerduras"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Outros:" />

    <TextView
        android:id="@+id/txtOutros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView19"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOutros"
        android:layout_marginTop="5dp"
        android:text="Bebidas:" />

    <TextView
        android:id="@+id/txtBebidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBebidas"
        android:layout_marginTop="5dp"
        android:text="Mais alimentos:" />

    <TextView
        android:id="@+id/txtMaisAlimentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView23"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtHoraDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDataDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txtHoraDieta"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp" />
</RelativeLayout>